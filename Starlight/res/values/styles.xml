<resources>

    <style name="AppTheme" parent="android:Theme.Black">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/WindowTitle</item>
        <item name="android:windowTitleSize">20dip</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">#000000</item>
    </style>

    <style name="WindowTitle">
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/WindowTitleTextAppearance</item>
    </style>

    <style name="WindowTitleTextAppearance">
        <item name="android:textColor">#ffffaa</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffcc</item>
        <item name="android:background">#555555</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
    </style>
    
</resources>